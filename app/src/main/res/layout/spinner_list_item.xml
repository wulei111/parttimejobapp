<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFB427"
    android:padding="15dp" >
    <ImageView
        android:id="@+id/spinner_item_icon_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baomu"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/spinner_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保姆"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/spinner_item_icon_image"
        android:layout_toEndOf="@+id/spinner_item_icon_image"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

</RelativeLayout>