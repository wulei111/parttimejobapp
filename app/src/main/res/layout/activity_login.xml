<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.best.love_parttimejob_app.LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <!--toolbar-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:background="@color/toolbarcolor"
            android:gravity="center_vertical"
            android:paddingRight="15dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:src="@drawable/fanhuis"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:text="账户登录"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.48"
                android:gravity="center"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:text="注册"
                android:textSize="18sp"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:onClick="registere"
                />
        </LinearLayout>
        <!--toolbar-->


        <!-- body-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.85"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">
            <!-- 主要内容-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/sousuokuang"
                    android:hint="手机号/邮箱"
                    android:inputType="text"
                    android:id="@+id/zhanghao"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/sousuokuang"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:id="@+id/mima"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1"
                    android:text="登   录"
                    android:textColor="@color/white"
                    android:background="@drawable/anniu01"
                    android:textSize="17sp"
                    android:id="@+id/login"
                    android:onClick="login"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.45"
                        android:text="忘记密码？"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="短信验证登录"
                        android:gravity="center_vertical"
                        android:onClick="duanxinlogin"
                        android:id="@+id/duanxin"
                        />
                </LinearLayout>
            </LinearLayout>
            <!-- 主要内容-->



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>

        </LinearLayout>
        <!-- body-->
    </LinearLayout>

</RelativeLayout>
