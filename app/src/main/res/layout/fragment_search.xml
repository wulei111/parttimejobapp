                <RadioButton
                    android:id="@+id/btren04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="1~100人"/>
                <RadioButton
                    android:id="@+id/btren05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="1~200人"/>
                <RadioButton
                    android:id="@+id/btren06"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="200人以上"/>

            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/choose_fu03"
            android:background="@color/yellow_f"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择薪资"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                />
            <ImageView
                android:id="@+id/image03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_browser"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/choose_zi03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/radioxin01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btxin01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="1~100"/>
                <RadioButton
                    android:id="@+id/btxin02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="100~200"/>
                <RadioButton
                    android:id="@+id/btxin03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="200~500"/>

            </RadioGroup>
            <RadioGroup
                android:id="@+id/radioxin02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btxin04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="500~1000"/>
                <RadioButton
                    android:id="@+id/btxin05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="1000~3000"/>
                <RadioButton
                    android:id="@+id/btxin06"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="3000以上"/>

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listview_search"
        android:layout_below="@id/linear_choose"
        android:transcriptMode="alwaysScroll" />

    <TextView
        android:id="@+id/text_jieguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱兼职（全部约0条结果）"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:textSize="14sp"
        android:textColor="@color/danhong"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</FrameLayout>
