<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.best.fragment.SearchFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear_s"
        android:layout_below="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            >
        <EditText
            android:id="@+id/edit_search"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            android:paddingLeft="34dp"
            android:background="@drawable/sousuokuang"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sousuo"
            android:layout_alignTop="@id/edit_search"
            android:layout_alignBottom="@id/edit_search"
            android:layout_alignLeft="@id/edit_search"
            />
        </RelativeLayout>
        <Button
            android:id="@+id/but_search"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:layout_height="42dp"
            android:background="@drawable/button_style01"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="搜索"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_choose"
        android:layout_below="@id/linear_s"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
        android:id="@+id/choose_fu01"
        android:background="@color/yellow_f"
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择时间"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            />
        <ImageView
            android:id="@+id/image01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_browser"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/choose_zi01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioshijian01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btshijian01"
