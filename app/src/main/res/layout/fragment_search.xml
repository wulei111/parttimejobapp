                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="一天"/>
                <RadioButton
                    android:id="@+id/btshijian02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="一周"/>
                <RadioButton
                    android:id="@+id/btshijian03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="一月"/>

            </RadioGroup>
            <RadioGroup
                android:id="@+id/radioshijian02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btshijian04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="一季度"/>
                <RadioButton
                    android:id="@+id/btshijian05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="半年"/>
