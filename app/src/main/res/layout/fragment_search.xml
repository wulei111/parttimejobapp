        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/choose_zi02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/radioren01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btren01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="1~10人"/>
                <RadioButton
                    android:id="@+id/btren02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:button="@null"
                    android:background="@drawable/radio_style02"
                    android:textColor="@drawable/text_style02"
                    android:text="1~20人"/>
                <RadioButton
                    android:id="@+id/btren03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
