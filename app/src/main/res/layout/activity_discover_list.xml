<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView android:id="@+id/discoverlisticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/liyi"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView android:id="@+id/discoverlisttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加急 山东交院食品厂招收暑假工及长期工"
            android:textColor="#000"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/qian"/>
            <TextView android:id="@+id/discoverlistaddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="河东汤头"
                android:textColor="@color/textcolors"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/qian"/>
            <TextView android:id="@+id/discoverlistmoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100"
                android:textColor="@color/textcolors"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/qian"/>
            <TextView android:id="@+id/discoverlistdays"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3天"
                android:textColor="@color/textcolors"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/discoverlistjiaobiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jiaobiao"/>
</LinearLayout>